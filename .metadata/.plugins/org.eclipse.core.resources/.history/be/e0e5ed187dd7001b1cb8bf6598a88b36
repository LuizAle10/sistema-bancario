package testes;

import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.DisplayName;
import org.junit.jupiter.api.Test;

import treinandoJava.CadastrarPessoa;

class PessoaTest {

	@DisplayName("Teste Cadastro de Pessoa")
	@Test
	void testeNomePessoaCadastrada() {
		CadastrarPessoa idadePessoa = new CadastrarPessoa(31, "Alexandre", "Brasileiro", "SÃ£o Paulo", "QA", "Palmeiras",
				"M", "Rua a direita", 88);

		assertEquals(3, idadePessoa.alexandre(31), "Nome da Pessoa incorreto");

	}

}
